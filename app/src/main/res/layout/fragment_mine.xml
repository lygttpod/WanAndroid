<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:stv="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    android:paddingTop="20dp">

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@mipmap/icon_head_img" />

    <TextView
        android:id="@+id/user_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginTop="20dp"
        android:text="用户名" />

    <com.allen.library.SuperTextView
        android:id="@+id/collect_stv"
        style="@style/mine_stv_style"
        stv:sLeftTextString="我的收藏" />

    <com.allen.library.SuperTextView
        android:id="@+id/history_stv"
        style="@style/mine_stv_style"
        stv:sLeftTextString="搜索历史" />

    <com.allen.library.SuperTextView
        android:id="@+id/about_stv"
        style="@style/mine_stv_style"
        stv:sDividerLineType="none"
        stv:sLeftTextString="关于我们" />

    <com.allen.library.SuperButton
        android:id="@+id/logout_sbt"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="40dp"
        android:text="退出登录"
        android:textColor="@color/white"
        stv:sCornersRadius="4dp"
        stv:sSolidColor="@color/colorPrimary" />
</LinearLayout>