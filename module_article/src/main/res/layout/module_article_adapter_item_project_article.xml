<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    app:cardCornerRadius="5dp"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    app:contentPaddingTop="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/article_pic_iv"
            android:layout_width="60dp"
            android:layout_height="120dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/author_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/article_pic_iv"
            android:text="作者" />

        <TextView
            android:id="@+id/time_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/author_tv"
            android:layout_alignParentRight="true"
            android:text="一天前" />

        <TextView
            android:id="@+id/title_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/collect_iv"
            android:layout_below="@+id/author_tv"
            android:layout_centerInParent="true"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/article_pic_iv"
            android:gravity="center|left"
            android:text="优雅的方案实现屏幕截图"
            android:textSize="16sp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/collect_iv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/article_pic_iv"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="5dp"
            android:padding="2dp"
            android:src="@drawable/icon_uncollect" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
