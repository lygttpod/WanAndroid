<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimary">

        <ImageView
            android:id="@+id/back_iv"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingLeft="18dp"
            android:paddingRight="20dp"
            android:src="@mipmap/app_back_icon_3x" />

        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/back_iv"
            app:closeIcon="@drawable/ic_search_close_white_24dp"
            app:defaultQueryHint="请输入搜索内容"
            app:iconifiedByDefault="true"
            app:queryHint="请输入搜索内容"
            app:searchHintIcon="@drawable/ic_search_white_24dp"
            app:searchIcon="@drawable/ic_search_white_24dp" />
    </RelativeLayout>

    <com.allen.wanandroid.widget.CustomViewPager
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>
